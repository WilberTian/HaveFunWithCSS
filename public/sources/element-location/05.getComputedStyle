  <style>

    .ex-1 #parent {
      border: 4px solid black;
      width: 200px;
      height: 200px;
      position: relative;
      top: 20px;
      left: 60px;
      overflow: auto;
      float: left;
    }

    .ex-1 #child {
      border: 4px solid black;
      width: 60px;
      height: 60px;
      margin: 20px;
    }
    
    .ex-1 #result {
      border: 1px solid black;
      display: inline-block;
      padding: 10px;
      float: left;
      margin: 20px 0px 0px 100px;

    }
    </style>
